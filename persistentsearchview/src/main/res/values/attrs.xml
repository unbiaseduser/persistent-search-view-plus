<resources>

    <declare-styleable name="PersistentSearchView">

        <attr name="psv_isDismissableOnTouchOutside" format="boolean"/>
        <attr name="psv_isProgressBarEnabled" format="boolean"/>
        <attr name="psv_isVoiceInputButtonEnabled" format="boolean"/>
        <attr name="psv_isClearInputButtonEnabled" format="boolean"/>
        <attr name="psv_areSuggestionsDisabled" format="boolean"/>
        <attr name="psv_shouldDimBehind" format="boolean"/>

        <attr name="psv_dimColor" format="color"/>
        <attr name="psv_dimAmount" format="float"/>

        <attr name="psv_cardBackgroundColor" format="color"/>
        <attr name="psv_cardCornerRadius" format="dimension"/>
        <attr name="psv_cardElevation" format="dimension"/>

        <attr name="psv_queryInputHint" format="string"/>
        <attr name="psv_queryInputHintColor" format="color"/>
        <attr name="psv_queryInputTextColor" format="color"/>
        <attr name="psv_queryInputBarIconColor" format="color"/>

        <attr name="psv_leftButtonDrawable" format="reference"/>
        <attr name="psv_rightButtonDrawable" format="reference"/>
        <attr name="psv_clearInputButtonDrawable" format="reference"/>
        <attr name="psv_voiceInputButtonDrawable" format="reference"/>

        <attr name="psv_dividerColor" format="color"/>
        <attr name="psv_progressBarColor" format="color"/>

        <attr name="psv_suggestionRecentSearchIconColor" format="color"/>
        <attr name="psv_suggestionSearchSuggestionIconColor" format="color"/>
        <attr name="psv_suggestionIconColor" format="color"/>
        <attr name="psv_suggestionTextColor" format="color"/>
        <attr name="psv_suggestionSelectedTextColor" format="color"/>

    </declare-styleable>

</resources>